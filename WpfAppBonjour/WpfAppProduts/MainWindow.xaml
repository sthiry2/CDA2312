<Window x:Class="WpfAppProduts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProduts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Name="grid" Columns="1" Rows="3" >
        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="139,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Name}"/>
        <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="139,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding ProductId}"/>
        <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="139,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Category.Name}"/>
    </UniformGrid>
</Window>
