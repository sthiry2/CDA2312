<Window x:Class="WpfAppBindings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Rows="4">
        <TextBlock Grid.Row="0" Text="{Binding Prenom}" />
        <TextBlock Grid.Row="1" Text="{Binding Nom}" />
        <TextBlock Grid.Row="2" Text="{Binding Age}" />
        <Button Grid.Row="3" Click="ButtonAge_Click">Ajouter 1an</Button>
    </UniformGrid>
</Window>
