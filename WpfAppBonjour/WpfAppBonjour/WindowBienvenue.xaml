<Window x:Class="WpfAppBonjour.WindowBienvenue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WindowBienvenue" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="218,0,0,0" VerticalAlignment="Center" Height="100" Width="208">
            <TextBlock.Text>
                <MultiBinding StringFormat="Bienvenue {0} {1}">
                    <Binding Path="Prenom" />
                    <Binding Path="Nom" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
    </Grid>
</Window>
