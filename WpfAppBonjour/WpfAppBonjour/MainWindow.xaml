<Window x:Class="WpfAppBonjour.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="534" Width="800">
    <UniformGrid Name="grid" Columns="2" Rows="2" >
        <Label Grid.Row="0" Grid.Column="0"  Name="labelNom" Content="Nom:" Target="textBoxName" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="textBoxName" Text="{Binding Nom }" />
        <Label Grid.Row="1" Grid.Column="0" Name="labelMdp" Content="MDP:" Target="textBoxMdp"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="textBoxMdp" TextChanged="textBoxMdp_TextChanged" />
    </UniformGrid>
</Window>
